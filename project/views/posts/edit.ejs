<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit "<%= pic.name %>"</h1>
		<div style="width: 30%; margin: 25px auto;">
		<form action="/pics/<%= pic._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="pic[title]" value="<%= pic.title %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="pic[image]" value="<%= pic.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="pic[description]" value="<%= pic.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		  </form>
		  <a href="/pics">Go Back</a>
		</div>
	</div>
</div>

</body
</html>