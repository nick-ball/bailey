<%- include ("../partials/header") %>

	<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To <strong><em>Bailey's Site</em></strong>!</h1>
			<div class="container text-center">
			<img src="/stylesheets/paws.png" class="img-fluid" alt="Responsive image">
			</div>
			<p>View these cute pictures of Bailey the Cavapoo puppy.</p>
			<p>To upload a picture, first upload it for free to <a href="https://imgur.com/">Imgur.com</a>, and then use the image url for the post on this site.</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/posts/new">Add New Post</a>
			</p>
		</div>
	</header>
		
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		 <% posts.forEach(function(post){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
				<img src="<%= post.image %>">
				<div class="caption">
				<h4><%= post.name %></h4>
				</div>
				<p>
					<a href="/posts/<%= post._id %>" class="btn btn-primary">View Larger</a>
				</p>
				</div>
			</div>
		<% }) %>
		</div>
	</div>

<%- include ("../partials/footer") %>